<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/Logo_Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
<ImageView
    android:id="@+id/app_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_road"
    />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="分 布 式\n 光 伏 监 测 系 统"
        android:textColor="#000000"
        android:textSize="26sp"
        />



    <ProgressBar
        android:id="@+id/progress_mid"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"

        />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_mid"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="版本号：1.0"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tv_updateprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="下载进度：0%"
        android:textColor="#7f38a9"
        android:textSize="20sp"
        android:visibility="gone"
        />
</RelativeLayout>


</FrameLayout>